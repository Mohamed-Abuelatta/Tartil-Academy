                                <img src="assets/images/about-child.jpg" class="img-fluid rounded-circle" alt="">
                            </div>
                            <div class="col-9">
                                <h2 class="mb-0 text-primary">قيمنا</h2>
                                <p class="mb-0">{{ site.value }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <p class="mb-2">{{ site.values[0] }}<i class="fa fa-check text-primary ms-3"></i></p>
                            <p class="mb-0">{{ site.values[1] }}<i class="fa fa-check text-primary ms-3"></i></p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">{{ site.values[2] }}<i class="fa fa-check text-primary ms-3"></i></p>
                            <p class="mb-0">{{ site.values[3] }}<i class="fa fa-check text-primary ms-3"></i></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container text-center bg-primary py-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="row g-4 align-items-center">
                    <div class="col-lg-3">
                        <a href="" class="btn btn-light py-2 px-4">تعلم الان</a>
                    </div>
                    <div class="col-lg-7 text-center text-lg-end">
                        <h5 class="mb-0">{{ site.topic }}</h1>
                    </div>
                    <div class="col-lg-2">
                        <i class="fa fa-mosque fa-5x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->

    <!-- Activities Start -->
    <div class="container-fluid activities py-5">
        <div class="container py-5">
            <div class="mx-auto text-center mb-5 wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
                <h5 class="display-3">المناهج والانشطة</h5>
                <p class="fs-5 text-uppercase text-primary">لا تفوت خيرا انت فاعله فالمرء نحو الخير سباق</p>
            </div>
            <pre>{{ sections | dump }}</pre>

            <div class="row g-4">

                {% for actvty in section.activities %}
                    <div class="col-lg-6 col-xl-4 text-end">
                        <div class="activities-item p-4 wow fadeIn" data-wow-delay="0.1s">
                            <i class="{{ actvty.icon }}"></i>
                            <div class="ms-4">
                                <h4>{{ actvty.title }}</h4>
                                <p class="mb-4">{{ actvty.description }}</p>
                                <a href="" class="btn btn-primary px-3">اشترك الان</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
