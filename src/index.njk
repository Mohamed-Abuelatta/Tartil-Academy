    <!-- Blog Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <h1 class="display-3 text-center mb-5 wow fadeIn" data-wow-delay="0.1s">آخر المقالات</h1>
            <div class="row g-4 justify-content-center">

                {% for post in collections.posts | reverse | range(0, 3) -%}
                    <div class="col-lg-6 col-xl-4">
                        <div class="blog-item wow fadeIn" data-wow-delay="0.1s">
                            <div class="blog-img position-relative overflow-hidden">
                                <img src="{{ post.data.featured_image }}" class="img-fluid w-100" alt="{{ post.data.title }}">
                                <div class="bg-primary d-inline px-3 py-2 text-center text-white position-absolute top-0 end-0">{{ post.date | date("dd/MM/yyyy") }}</div>
                            </div>
                            <div class="p-4">
                                <div class="blog-meta d-flex justify-content-between pb-2">
                                    <div>
                                        <small>
                                            <i class="fas fa-user me-2 text-muted"></i>
                                            <a href="{{ post.url }}" class="text-muted me-2">
                                                {{ post.data.author or "Admin" }}
                                            </a>
                                        </small>
                                    </div>
                                </div>
                                <a href="" class="d-inline-block fs-5 lh-sm mb-3">{{ post.data.title }}</a>
                                <p class="mb-4">{{ post.data.description | striptags }}</p>
                                <a href="{{ post.url }}" class="btn btn-primary px-3 stretched-link">اقرا المزيد</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
    <!-- Blog End -->

    <!-- Team Start -->
    <div class="container-fluid team py-5">
        <div class="container py-5">
            <div class="text-center mx-auto mb-5 wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
                <h5 class="display-3">القائمين على المشروع</h5>
                <p class="fs-5 text-uppercase text-primary">فريقنا مكون من افضل الكوادر المدربة بجامعة الازهر</p>
            </div>
            <div class="row g-5">
                <div class="col-lg-4 col-xl-5">
                    <div class="team-img wow zoomIn" data-wow-delay="0.1s">
                        <img src="{{ section.team[0].image }}" class="img-fluid" alt="">
                    </div>
                </div>
                <div class="col-lg-8 col-xl-7">
                    <div class="team-item text-end wow fadeIn" data-wow-delay="0.1s">
                        <h1>{{ section.team[0].name }}</h1>
                        <h5 class="fw-normal fst-italic text-primary mb-4">{{ section.team[0].role }}</h5>
                        <p class="mb-4">{{ section.team[0].feedback }}</p>
                        <div class="team-icon d-flex pb-4 mb-4 border-bottom border-primary">
                            
                            {% for social in section.team[0].social %}
                            <a class="btn btn-primary btn-lg-square me-2" href="{{ social.link }}"><i class="{{ social.icon }}"></i></a>
                            {% endfor %}

                        </div>
                    </div>
                    <div class="row g-4">
                        {% for team in section.team | range(1, 4) %}
                        <div class="col-md-4">
                            <div class="team-item wow zoomIn" data-wow-delay="0.{{ loop.index + 2 }}s">
                                <img src="{{ team.image }}" class="img-fluid w-100" alt="">
                                <div class="team-content text-dark text-center py-3">
                                    <div class="team-content-inner">
                                        <h5 class="mb-0">{{ team.name }}</h5>
                                        <p class="text-dark">{{ team.role }}</p>
                                        <div class="team-icon d-flex align-items-center justify-content-center">
                                            {% for social in team.social %}
                                            <a class="btn btn-primary btn-sm-square me-2" href="{{ social.link }}"><i class="{{ social.icon }}"></i></a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Team End -->

    <!-- Testiminial Start -->
    <div class="container-fluid testimonial py-5">
        <div class="container py-5">
            <div class="text-center mx-auto mb-5 wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
                <h5 class="display-3">سمعتنا تسبقنا</h5>
                <p class="fs-5 text-uppercase text-primary">اصدق ما قيل عن اكاديمية ترتيل من خلال افضل طلابها</p>
            </div>
            <div class="owl-carousel testimonial-carousel wow fadeIn" data-wow-delay="0.1s">

                {% for testimonial in section.testimonials %}
                    <div class="testimonial-item">
                        <div class="d-flex mb-3">
                            <div class="position-relative">
                                <img src="{{ testimonial.image }}" class="img-fluid" alt="">
                                <div class="btn-md-square bg-primary rounded-circle position-absolute" style="top: 25px; left: -25px;">
                                    <i class="fa fa-quote-left text-dark"></i>
                                </div>
                            </div>
                            <div class="ps-3 my-auto ">
                                <h5 class="mb-0">{{ testimonial.name }}</h5>
                                <p class="m-0">{{ testimonial.profession }}</p>
                            </div>
                        </div>
                        <div class="testimonial-content">
                            <div class="d-flex">
                            {% for i in range(1, 6) %}
                            <i class="fas fa-star {% if i <= testimonial.rating %}text-primary{% else %}text-secondary{% endif %}"></i>
                            {% endfor %}
                            </div>
                            <p class="fs-5 m-0 pt-3">{{ testimonial.feedback }}</p>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
    <!-- Testiminial End -->
        
{% endblock %}