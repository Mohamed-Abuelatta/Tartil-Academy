---
title: المدونة
breadcrumb:
- { label: "الرئيسية", url: "/" }
- { label: "المدونة", url: "/pages/posts/" }
permalink: "/pages/posts/"
eleventyExcludeFromCollections: true
---

{% extends "layouts/page.njk" %}
{% block pageContent %}


<div class="container-fluid bg-light">
  <div class="container pb-4">
    <div class="row g-4">

      {% for post in collections.posts | reverse -%}
      <div class="col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0">
          {% if post.data.featured_image %}
          <img src="{{ post.data.featured_image }}" class="card-img-top" alt="{{ post.data.title }}">
          {% endif %}
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <a href="{{ post.url }}" class="stretched-link text-decoration-none text-dark">
                {{ post.data.title }}
              </a>
            </h5>
            <p class="card-text text-muted mb-3">
              {{ post.data.description | striptags }}
            </p>
            <div class="mt-auto d-flex justify-content-between text-muted small">
              <span><i class="bi bi-calendar-event"></i> {{ post.date | date("dd/MM/yyyy") }}</span>
              <span>{{ post.data.author or "Admin" }} <i class="bi bi-person-circle"></i></span>
            </div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="alert alert-danger d-flex align-items-center justify-content-between display-5 px-5" role="alert"> لا يوجد مقالات حاليا <i class="bi bi-exclamation-triangle-fill"></i> </div>
      {% endfor %}

    </div>
  </div>
</div>




{% endblock %}
